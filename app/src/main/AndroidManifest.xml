<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nenad.newsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:name=".Hilt_MyApplication"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsApp">
        <activity android:name=".view.activities.OverviewActivity"></activity>
        <activity android:name=".view.activities.BaseActivity" />
        <activity
            android:name=".view.activities.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.LogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.IntroScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.MainActivity" />
    </application>

</manifest>